@inherits StockList
@attribute [Authorize]

@((RenderFragment)base.BuildRenderTree)

@code
{
    [Parameter]
    public string searchInput { get; set; } = null!;

    protected override async Task GetStocksAsync()
    {
        Stocks = await StocksService.GetWatchlistAsync();
    }

    protected override async Task GetStocksToShowAsync()
    {
        StocksToShow = await StocksService.SearchAsync(searchInput);
    }
}